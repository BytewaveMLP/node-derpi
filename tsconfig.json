{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"noImplicitAny": true,
		"preserveConstEnums": true,
		"sourceMap": false,
		"strictNullChecks": true,
		"outDir": "dist",
		"declaration": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"lib": [
			"es5",
			"es6",
			"dom",
			"es2015.core",
			"es2015.collection",
			"es2015.generator",
			"es2015.iterable",
			"es2015.promise",
			"es2015.proxy",
			"es2015.reflect",
			"es2015.symbol",
			"es2015.symbol.wellknown",
			"esnext.asynciterable"
		]
	},
	"include": [
		"lib/**/*"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts"
	]
}
